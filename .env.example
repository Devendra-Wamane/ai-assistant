# Environment Configuration Template
# Copy this to .env and fill in your values

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
ENVIRONMENT=development

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather_here

# Security
SECRET_KEY=your-super-secret-key-here

# Database (Optional - for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_assistant

# Redis Cache (Optional - for future features) 
# REDIS_URL=redis://localhost:6379/0

# Production Settings (for deployment)
PRODUCTION_HOST=your-production-server.com
DOCKER_REGISTRY=ghcr.io
IMAGE_NAME=ai-assistant

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=10